<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_setting_background"
    android:padding="@dimen/common_padding">

    <ImageView
        android:id="@+id/item_message_iv"
        android:layout_width="@dimen/item_message_iv"
        android:layout_height="@dimen/item_message_iv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_tiny"
        android:contentDescription="@string/item_message_iv_content_description"
        android:src="@drawable/home_message" />

    <ImageView
        android:id="@+id/item_message_iv_dot"
        android:layout_width="@dimen/message_dot_size"
        android:layout_height="@dimen/message_dot_size"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/common_smaller"
        android:layout_marginRight="@dimen/common_smaller"
        android:layout_marginTop="@dimen/common_mini"
        android:layout_toLeftOf="@+id/item_message_tv_type"
        android:layout_toStartOf="@id/item_message_tv_type"
        android:src="@drawable/dot_message" />

    <TextView
        android:id="@+id/item_message_tv_type"
        style="@style/common_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/item_message_iv"
        android:layout_toLeftOf="@+id/item_message_tv_time"
        android:layout_toRightOf="@id/item_message_iv"
        android:layout_toStartOf="@+id/item_message_tv_time"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView
        android:id="@+id/item_message_tv_time"
        style="@style/common_font_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/item_message_tv_content"
        style="@style/common_font_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_message_tv_type"
        android:layout_alignStart="@+id/item_message_tv_type"
        android:layout_below="@+id/item_message_tv_type"
        android:layout_marginTop="@dimen/common_tiny"
        android:layout_toEndOf="@+id/item_message_iv"
        android:layout_toRightOf="@+id/item_message_iv"
        android:maxLines="2" />

</RelativeLayout>
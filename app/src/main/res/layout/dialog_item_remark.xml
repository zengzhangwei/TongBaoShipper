<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            style="@style/common_font_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_item_title_height"
            android:background="@color/background_blue"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_normal"
            android:text="评论订单" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="司机评分"
                    android:textColor="@color/font_somber"
                    android:textSize="@dimen/item_address_btn_tv_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/remarkPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rating="5"
                    android:stepSize="1"
                    android:numStars="5"
                    android:max="5"
                    android:progressBackgroundTint="@color/background_blue"
                    android:progressTint="@color/green"
                    android:progressBackgroundTintMode="src_atop"

                    android:background="@null" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line"
            android:background="@color/background_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="宝贵评语"
                    android:textColor="@color/font_somber"
                    android:textSize="@dimen/item_address_btn_tv_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/remarkText"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/common_font_hint"
                    android:background="@null"

                    android:hint="写上您宝贵的评语"
                    android:textSize="@dimen/item_address_btn_tv_size" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

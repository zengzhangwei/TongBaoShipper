<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".View.Fragment.WaitingOrderTab">


    <com.sevenheaven.segmentcontrol.RefreshListView
        android:id="@+id/waiting_order_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" >

    </com.sevenheaven.segmentcontrol.RefreshListView>

    <LinearLayout
        android:id="@+id/waiting_order_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_width="@dimen/empty_message_iv"
            android:layout_height="@dimen/empty_message_iv"
            android:scaleType="centerInside"
            android:src="@drawable/listview_empty" />

        <TextView
            style="@style/common_font_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:text="还没有正在进行的订单" />
    </LinearLayout>


</RelativeLayout>
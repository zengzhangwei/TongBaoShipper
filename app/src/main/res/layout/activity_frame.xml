<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".controller.activity.FrameActivity">

    <LinearLayout
        android:id="@+id/frame_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_bottom_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_border"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/frame_btn_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frame_iv_home"
                style="@style/frame_bottom_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frame_home_pressed" />

            <TextView
                android:id="@+id/frame_tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frame_home"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/frame_font_bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_btn_nearby"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frame_iv_nearby"
                style="@style/frame_bottom_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frame_iv_nearby" />

            <TextView
                android:id="@+id/frame_tv_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frame_nearby"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/frame_font_bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_btn_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frame_iv_order"
                style="@style/frame_bottom_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frame_iv_order" />

            <TextView
                android:id="@+id/frame_tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frame_order"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/frame_font_bottom" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_btn_my"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/frame_iv_my"
                style="@style/frame_bottom_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frame_iv_my" />

            <TextView
                android:id="@+id/frame_tv_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frame_my"
                android:textColor="@color/font_gray"
                android:textSize="@dimen/frame_font_bottom" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/frame_bottom"
        android:orientation="vertical" />
</RelativeLayout>

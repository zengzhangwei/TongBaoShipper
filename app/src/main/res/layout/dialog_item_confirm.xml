<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_confirm_title"
            style="@style/common_font_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_item_title_height"
            android:background="@color/background_blue"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_normal"
            android:text="需要确认" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dialog_confirm_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="这里是对话框的提示 !"
                    android:textColor="@color/font_somber"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

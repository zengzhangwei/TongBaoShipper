<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_mini"
    android:paddingBottom="@dimen/common_mini"
    android:paddingLeft="@dimen/common_padding"
    android:paddingRight="@dimen/common_padding"
    android:background="@color/background_white">

    <TextView
        android:id="@+id/item_account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值"
        style="@style/common_font"/>
    <TextView
        android:id="@+id/item_account_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_account_type"
        android:text="2015-12-24"
        android:textColor="@color/font_gray"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/item_account_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="+100"
        android:layout_centerVertical="true"
        android:textColor="@color/green"
        android:textSize="@dimen/item_account_money_text_size"/>
</RelativeLayout>